<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Login">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/marginTopTitleLogin"
        android:text="@string/app_name" />
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/deplasticlogo" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/loginDimTextInput"
        android:layout_marginTop="@dimen/marginTopTitleInput"
        android:autofillHints="emailAddress"
        android:hint="@string/hint_usr"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/loginDimTextInput"
        android:hint="@string/hint_pass"
        android:inputType="textPassword"
        android:autofillHints="password" />

    <Button
        android:id="@+id/LoginButton"
        android:layout_marginTop="@dimen/buttonLogMargTop"
        android:layout_gravity="end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Loginbutton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/don_t_have_an_account"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/toRegisterButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="@string/RegisterButton"
        android:textColor="@color/black"
        />




</LinearLayout>